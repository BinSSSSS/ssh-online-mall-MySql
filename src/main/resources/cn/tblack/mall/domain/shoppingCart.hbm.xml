<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cn.tblack.mall.domain">

	<!-- name 为 类名， table 为表名 -->
	<class name="ShoppingCart" table="shopping_cart">
	
		<!-- 非主键映射， 属性和列名一一对应 -->
		<id name="cartId" column="CART_ID" />
		<property name="items" column="item_id">
			
		</property>
		<property name="userId" column="CART_ID" />
		<property name="total" column="TOTAL" />
			
	</class>

</hibernate-mapping>